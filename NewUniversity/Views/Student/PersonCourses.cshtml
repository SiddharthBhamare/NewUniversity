@model IEnumerable<NewUniversity.Models.PersonCourses>
@{
    ViewBag.Title = "RegisteredCourses";
}

<h2>RegisteredCourses</h2>

@Styles.Render("~/Content/CommonStyle.css")

<div id="table">

    <table id="Test" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
        <thead>
            <tr>

                <th style="background-color: black"><label id="lblCourseID">Person Course No</label></th>
                <th  style="background-color: black"> <label id="lblFaculty">Course Name</label></th>
                <th  style="background-color: black"><label id="lblSubject">Online URL</label></th>
                <th  style="background-color: black"> <label id="lblCredits">Onsite Location</label></th>
                <th  style="background-color: black"><label id="lblSubject">Online Days</label></th>
                <th  style="background-color: black"> <label id="lblCredits">Onsite Time</label></th>
            </tr>
        </thead>
        <tbody class="CustomeRowsColors">

            @foreach (var item in Model)
            {
                <tr>

                    <td >
                        @Html.DisplayFor(modelItem => item.busPersonCourses.PersonCoursesID)
                    </td>
                    <td >
                        @Html.DisplayFor(modelItem => item.busPersonCourses.Course_Name)
                    </td>
                    <td >
                        <a href=@Html.DisplayFor(modelItem => item.busOnlineCourses.URL)> @Html.DisplayFor(modelItem => item.busOnlineCourses.URL) </a>
                    </td>
                    <td >
                        @Html.DisplayFor(modelItem => item.busOnsiteCourses.Location)
                    </td>
                    <td >
                        @Html.DisplayFor(modelItem => item.busOnsiteCourses.Days)
                    </td>
                    <td >
                        @Html.DisplayFor(modelItem => item.busOnsiteCourses.Time)
                    </td>
                </tr>

            }


        </tbody>

    </table>
</div>